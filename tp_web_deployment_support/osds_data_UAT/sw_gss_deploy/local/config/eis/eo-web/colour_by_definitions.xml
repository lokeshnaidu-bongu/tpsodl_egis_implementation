    </colour_map>
    <!-- A named colour map -->
    <colour_map name="status">
	<colour value="blue"/>
	<colour value="orange"/>
	<colour value="brown"/>
	<colour value="black"/>
	<colour value="green"/>
	<colour value="red"/>
	<colour value="purple"/>
	<colour value="yellow"/>
	<colour value="cyan"/>
	<colour value="hotpink"/>
    </colour_map>
    
    <!-- The next 3 colour map defintions are used by the colour by circuit -->
    <!-- Circuit colour map, this will be used by the circuit colour by and will be overwritten by colour map config -->
    <colour_map name="circuit">
	<!-- No colours are listed here as this is generated by the circuit colour by and any entries given will be overwritten 
	     by colour map config.  This is included here to reserve the name for use by the colour map config and should not be removed -->
    </colour_map>
    
    <!-- Circuit no colour defined colour map, this will be used by the circuit colour by and provides the colour for those elements which do not belong to a circuit -->
    <colour_map name="circuit_not_set">
	<!-- Only one colour value is used for the electrical conductors when no circuit is defined -->
	<colour value="gray"/>
    </colour_map>

    <!-- Circuit defaults colour map, this will be used by the circuit colour by when the circuit record does not have a colour set -->
    <colour_map name="circuit_defaults">
	<colour value="brown"/>
	<colour value="black"/>
	<colour value="green"/>
	<colour value="red"/>
	<colour value="purple"/>
	<colour value="yellow"/>
	<colour value="cyan"/>
    </colour_map>

    <field_type dataset="electric" name="eo_line_voltage" type="grouped_value" >
	<!--A connector subset with type nominal_voltage_pp using the default colour map. -->
	<object name="eo_wire_segment_inst"/>
	<object name="eo_cable_segment_inst"/>
	<object name="eo_connector_segment_inst"/>
	<!-- List of predicates to replace those generated by the enumerator -->
	<range_value name="Up to  277 V"   low_value="0 v"    high_value="277 v"/>
	<range_value name="460 V to 66 kV" low_value="460 v"    high_value="66 kv"/>
	<range_value name="Over 66 kV"     low_value="69 kv"    high_value="4000 kv"/>
	<single_value  name="No value" value="unset" />
    </field_type>

    <field_type dataset="electric" name="eo_network_type" domain="eo_lv_mv_hv_network_type">
	<object name="eo_cable_segment_inst"/>
	<object name="eo_wire_segment_inst"/>
	<object name="eo_connector_segment_inst"/>
    </field_type>

    <field_type dataset="electric" name="eo_status" domain="eo_active_status" colour_map="status">
	<object name="eo_cable_segment_inst"/>
	<object name="eo_wire_segment_inst"/>
	<object name="eo_connector_segment_inst"/>
    </field_type>

    <field_type dataset="electric" name="eo_phase" domain="eo_phasing">
	<object name="eo_cable_segment_inst"      field_name="existing_phasing" />
	<object name="eo_wire_segment_inst"       field_name="existing_phasing"/>
	<object name="eo_connector_segment_inst"  field_name="existing_phasing"/> 
   </field_type>    

    <field_type dataset="electric" name="circuit_id()" colour_map="circuit">
	<object name="eo_wire_segment_inst"       field_name="circuit_id()"/>
	<object name="eo_cable_segment_inst"      field_name="circuit_id()"/>
	<object name="eo_connector_segment_inst"  field_name="circuit_id()"/>
    </field_type>

</colour_by_attributes>
